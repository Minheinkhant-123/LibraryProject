@{
    ViewData["Title"] = "Create Loan";
}

<h2>Create Book Loan</h2>

@if (ViewBag.Errors != null)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (string err in ViewBag.Errors)
            {
                <li>@err</li>
            }
        </ul>
    </div>
}

<form method="post" asp-action="Create">
    <div class="form-group mb-3">
        <label>Member</label>
        <select asp-items="ViewBag.Members" name="memberId" class="form-control">
            <option value="">-- Select Member --</option>
        </select>
    </div>

    <div class="form-group mb-3">
        <label>Book</label>
        <select asp-items="ViewBag.Books" name="bookId" class="form-control">
            <option value="">-- Select Book --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
