@model List<LibraryProject.Models.Members>

<h2>Members</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Add New Member</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.Name</td>
                <td>@m.Email</td>
                <td>@m.Phone</td>
                <td>@m.Address</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@m.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@m.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
