@model IEnumerable<LibraryProject.Models.BookLoans>

<h2>Overdue Books</h2>

<table class="table table-danger">
    <thead>
        <tr>
            <th>Book</th>
            <th>Member</th>
            <th>Due Date</th>
            <th>Days Overdue</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var loan in Model)
        {
            var overdueDays = (DateTime.Now - loan.DueDate).Days;
            <tr>
                <td>@loan.Book.Title</td>
                <td>@loan.Member.Name</td>
                <td>@loan.DueDate.ToShortDateString()</td>
                <td>@overdueDays</td>
            </tr>
        }
    </tbody>
</table>
