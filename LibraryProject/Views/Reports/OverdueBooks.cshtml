@model List<LibraryProject.Models.BookLoans>

<h2>Overdue Books</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Book Title</th>
            <th>Author(s)</th>
            <th>Member Name</th>
            <th>Loan Date</th>
            <th>Due Date</th>
            <th>Days Overdue</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var loan in Model)
        {
            var overdueDays = (DateTime.Now - loan.DueDate).Days;
            <tr>
                <td>@loan.Book.Title</td>
                <td>@string.Join(", ", loan.Book.BookAuthors.Select(ba => ba.Author.Name))</td>
                <td>@loan.Member.Name</td>
                <td>@loan.LoanDate.ToShortDateString()</td>
                <td>@loan.DueDate.ToShortDateString()</td>
                <td>@overdueDays</td>
            </tr>
        }
    </tbody>
</table>
